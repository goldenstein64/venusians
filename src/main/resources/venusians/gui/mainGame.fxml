<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="venusians.gui.main.MainGameController">
	<children>
		<AnchorPane fx:id="mapPane" />
		<BorderPane fx:id="buttonPane">
			<right>
				<VBox alignment="CENTER_RIGHT" spacing="20.0">
					<children>
						<Button text="Build" />
						<Button text="Trade" />
						<Button text="Use Development Card" />
						<Button onAction="#incrementVictoryPoints" text="Increment Victory Points" />
					</children>
				</VBox>
			</right>
			<padding>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</padding>
         <top>
            <HBox alignment="TOP_CENTER" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TitledPane animated="false" text="Chat">
                     <content>
                        <VBox>
                           <children>
                              <ScrollPane fx:id="chatScrollPane" fitToHeight="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" vvalue="1.0">
                                <content>
                                  <AnchorPane>
                                       <children>
                                          <VBox fx:id="chatHistory" />
                                       </children>
                                    </AnchorPane>
                                </content>
                              </ScrollPane>
                              <TextField fx:id="chatPrompt" alignment="BOTTOM_LEFT" onAction="#sayMessage" promptText="Press Enter to Chat..." />
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="secondaryButton" alignment="CENTER" onAction="#endGame" text="Switch to Results" />
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            		<HBox alignment="TOP_CENTER" spacing="10.0">
            			<children>
            				<Label alignment="CENTER" text="Victory Points:">
            					<font>
            						<Font size="25" />
            					</font>
            				</Label>
            				<Label fx:id="victoryPointsValueLabel" alignment="CENTER" text="0">
            					<font>
            						<Font size="25" />
            					</font>
            				</Label>
            			</children>
            			<padding>
            				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            			</padding>
            		</HBox>
               </children>
            </HBox>
         </top>
		</BorderPane>
	</children>
</StackPane>
